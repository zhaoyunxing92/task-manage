    <!--根据用户id获取用户信息-->
    <select id="selectTaskManageUserByUserIdAndPassword" resultMap="AppUserVo">
        select
            a.id,
            a.unique_id,
            a.account,
            a.email,
            a.mobile,
            a.pin,
            a.status,
            a.nick_name,
            a.password1,
            a.password2,
            b.sex,
            b.real_name,
            b.city,
            b.url,
            b.address,
            b.bio,
            b.birthdate,
            c.file_url
        from
            app_user a left join app_user_extend b on
            a.id = b.user_id left join app_file_relate c on
            a.icon_file_id = c.unique_id
        where a.id=10005 and a.status!=0
    </select>

